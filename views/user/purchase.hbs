
<div class="row">
    <div class="col-md-12">
      <div class="panel panel-primary">
        <div class="panel-body">

          <table id="datatable-fixed-header" class="table table-striped table-bordered" >
            <thead>
              <tr>
                <th class="text-center">ID</th>
                <th class="text-center">HÌNH ẢNH</th>
                <th class="text-center">TÊN SẢN PHẨM</th>
                <th class="text-center">GIÁ</th>
                <th class="text-center">ĐƠN VỊ</th>
                <th class="text-center">GHI CHÚ THÊM</th>
              </tr>
            </thead>

            <tbody>
              {{#each product}}
                <tr>
                  <td style="position: relative;"> <a style="position: absolute;left: 21px;top: 65px;">{{id}}</a></td>
                  <td>
                      <button class="thumbnail imageItem">
                        <img class="image" src={{image}} alt="Image not found" onerror="this.onerror=null;this.src='https://bitsofco.de/content/images/2018/12/Screenshot-2018-12-16-at-21.06.29.png';" style="margin: auto;">
                      </button>
                  </td>
                  <td>{{name}}</td>
                  <td>{{price}} đ</td>
                  <td>{{quantity_unit}}</td>
                  <td>{{note}}</td>
                
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<style>
    .imageItem{
        width: 150px;
        height: 150px;
        margin: auto;
        display: flex;
    }
    .image{
        height: auto; 
        width: auto; 
        max-width: 140px; 
        max-height: 140px;
    }
</style>