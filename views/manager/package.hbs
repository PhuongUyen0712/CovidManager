<div class="container">
    <div style="display:flex; justify-content:flex-end">
        <a href="/package/addPackage" style="color:white;"><button type="button"
                class="btn btn-primary waves-effect waves-light" style="margin-bottom: 10px;">Thêm gói nhu yếu
                phẩm</button></a>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-body">

                    <table id="datatable-fixed-header" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th class="text-center">ID</th>
                                <th class="text-center">TÊN SẢN PHẨM</th>
                                <th class="text-center">SỐ LƯỢNG SẢN PHẨM</th>
                                <th class="text-center">GIÁ</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each package}}
                            <tr>
                                <td> {{id}}</td>
                                <td><a href="{{link}}" />{{name}}</td>
                                <td>{{list_product.length}}</td>
                                <td>{{price}}</td>
                                <td style="display:flex; flex-direction: column;">
                                    <form action="/package/updatePackage" method="post">
                                        <input type="text" name="id" value={{id}} style="display: none;">
                                        <button type="submit">
                                            <i class="ti-pencil-alt"></i>
                                        </button>
                                    </form>
                                    <form action="/package/deletePackage" method="post">
                                        <input type="text" name="id" value={{id}} style="display: none;">
                                        <button type="submit">
                                            <i class="ti-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .imageItem {
        width: 150px;
        height: 150px;
        margin: auto;
        display: flex;
    }

    .image {
        height: auto;
        width: auto;
        max-width: 140px;
        max-height: 140px;
    }
</style>