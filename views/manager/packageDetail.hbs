<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-primary">
        <h1 style="color:rgb(30,165,159); text-align:center; padding:10px">{{{name}}}</h1>
      </div>
      <div class="row">
        <div class="col-md-8">
          <div class="panel panel-primary">
            <div class="panel-body">
              <table class="table table-striped table-bordered">
                <thead>
                  <tr>
                    <th class="text-center">ID</th>
                    <th class="text-center">HÌNH ẢNH</th>
                    <th class="text-center">TÊN SẢN PHẨM</th>
                    <th class="text-center">GIÁ</th>
                    <th class="text-center">ĐƠN VỊ</th>
                    <th class="text-center">GHI CHÚ THÊM</th>
                    <th class="text-center">SỐ LƯỢNG</th>


                  </tr>
                </thead>
                <tbody>
                  {{#each products}}
                  <tr>
                    <td>{{id}}</td>

                    <td>{{name}}</td>
                    <td>
                      <button class="thumbnail imageItem">
                        <img class="image" style="width:100px; height: 75px;" src={{image}} alt="Image not found"
                          onerror="this.onerror=null;this.src='https://bitsofco.de/content/images/2018/12/Screenshot-2018-12-16-at-21.06.29.png';"
                          style="margin: auto;">
                      </button>
                    </td>
                    <td>{{price}} đ</td>
                    <td>{{quantity_unit}}</td>
                    <td>{{note}}</td>
                    <td>{{count}}</td>

                  </tr>
                  {{/each}}

                </tbody>
              </table>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div style="padding:10px;">
            <label>Tổng giá tiền</label>
            <div style="display: flex;">
              <div style="margin-left: 20px; font-style: italic; margin-top: 1px;">{{{price}}} đ</div>
            </div>
            <label>Giới hạn số gói trong 1 ngày</label>
            <div style="display: flex;">
              <div style="margin-left: 20px; font-style: italic; margin-top: 1px;">{{{limit_day}}} cái</div>
            </div>
            <label>Giới hạn số gói trong 1 tuần</label>
            <div style="display: flex;">
              <div style="margin-left: 20px; font-style: italic; margin-top: 1px;">{{{limit_week}}} cái</div>
            </div>
            <label>Giới hạn số gói trong 1 tháng</label>
            <div style="display: flex;">
              <div style="margin-left: 20px; font-style: italic; margin-top: 1px;">{{{limit_month}}}
                cái</div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
</div>