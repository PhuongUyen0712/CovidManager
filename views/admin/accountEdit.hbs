<div class="container center-block" style="width:500px">

            <div class="panel panel-primary">
                <div class="panel-body">
                    <form  action="/user/edit/{{id}}" method="post">
                        <div class="form-group">
                                <label>User Name</label>
                                <input type="text" class="form-control" name="user_name"  readonly value= {{user_name}} required placeholder="Type something"/>
                        </div>

                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" class="form-control" name="password" required value= {{password}} placeholder="Type something"/>
                        </div>
                        <div class="form-group">
                            <label>TÃªn</label>
                            <input type="text" class="form-control" name="name" required value= {{name}} placeholder="Type something"/>
                        </div>
                        <div class="form-group">
                            <label>CMND</label>
                            <input type="text" class="form-control" name="identity_card" required value= {{identity_card}} placeholder="Type something"/>
                        </div>

                        <div class="form-group">
                                <label>Active</label>
                                <input type="checkbox" class="form-control"  name="active" id= "active"/>
                        </div>
                        <div class="form-group">
                                <label>Is Alert</label>
                                
                                <input type="checkbox"  class="form-control"  name="is_alert" id="is_alert"/>
                                
                        </div>
                        
                        <div class="form-group">
                            <div>
                                <button type="submit" class="btn btn-primary waves-effect waves-light">
                                    Submit
                                </button>
                                <button type="reset" class="btn btn-default waves-effect m-l-5">
                                    Reset
                                </button>
                            </div>
                        </div>
                </form>
            </div>
        </div>
</div>
<script>
    document.getElementById("active").checked = {{active}};
    document.getElementById("is_alert").checked = {{is_alert}};

</script>